{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "lucent-carousell",
  "version": "1.0.1",
  "private": true,
  "description": "Lucent Carousell Price Prediction Desktop App",
  "main": "main.js",
  "homepage": "https://github.com/Azurath21/Lucent",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron . --silent",
    "electron-dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.1.0"
  },
  "build": {
    "appId": "com.lucent.carousell",
    "productName": "Lucent Carousell",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!.vscode",
      "!src",
      "!e2e",
      "!hooks",
      "!angular.json",
      "!_test-output",
      "!rimraf",
      "!*.log",
      "!.git",
      "!.env",
      "!*.ipynb",
      "!__pycache__",
      "!.venv",
      "!processed",
      "!raw"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "web/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "web/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "web/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
